.image-item{width: 100%;height: auto;}
.image-item image{width: 100%;vertical-align:top}

.btn-box{width: 100%;height: 100rpx;line-height: 100rpx;font-size: 16px;color: white;position: fixed;bottom: 0;left:0;}
