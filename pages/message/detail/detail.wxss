.detail-page{padding-bottom: 100rpx;}
.image-box{width: 100%; height: 422rpx;}
.content-box{padding:0 2%;margin-bottom:20rpx;}
.content-title{font-size: 20px; padding: 30rpx 0 10rpx 0; color: #000;font-weight: bold;text-align: center;}
.content-time{line-height:44rpx;font-size: 14px;text-align: center;}
.content-address{line-height:44rpx;font-size: 14px;text-align: center;}
