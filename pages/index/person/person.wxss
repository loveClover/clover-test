/* pages/index/person/person.wxss */
.info-box{padding: 30rpx;overflow: auto}
.header-img{height: 200rpx;width: 200rpx;float: left;border-radius: 10rpx;overflow: hidden;}
.header-img image{width: 100%;height: 100%;}
.text-info{width: 450rpx;float: left;margin-left: 30rpx;}
.name{height: 100rpx;font-size: 14px;line-height: 160rpx;}
.icon{display: inline-block;padding: 0 0 0 20rpx;}
.pink{color: pink;}
.skybule{color: skyblue;}
.info{line-height: 40rpx;font-size: 12px;}
.image-list{padding: 0 30rpx;width: 100%;box-sizing: border-box;white-space: nowrap}
.img-item{width: 120rpx;height: 120rpx;margin-right: 20rpx;display: inline-block;}
.img-item image{height: 100%;width: 100%;}

.details{padding-left: 10rpx;}
.detail-title{height: 80rpx;line-height: 120rpx;font-size: 12px;border-bottom: 1px solid #ccc;padding-left: 20rpx;}
.detail-content{margin: 30rpx 20rpx 0;line-height: 40rpx;font-size: 12px;}
.detail-lock{margin: 30rpx 20rpx 0;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 12px;border-radius: 30rpx;background:linear-gradient(137.4deg,rgba(60,153,243,1),rgba(78,211,255,1));color: #fff;}